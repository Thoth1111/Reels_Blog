<section class="indent">
    <div class="user-info">
        <img class="user-img" src=<%= @user.photo %>>
        <div class="bordered user">
            <span class="user-name"><%= @user.name %></span>
            <span class="user-offset">Number of posts: <%= @user.posts_counter %></span>
        </div>
    </div>
    <div class="bordered">
        bio:<br><br>
        <%= @user.bio %><br><br>
    </div>
    <% @user.first_three.each do |post| %>
        <a class="link" href=<%= user_post_path(@user, post) %>>
            <div class="bordered post-info">
                Post <%= post.id %>:<%= post.title %><br><br>
                <%= truncate(post.text, length: 50, separator: ' ') %><br>
                <span class="offset-left">Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %></span>
            </div>
        </a>
    <% end %>
    <button class="to-posts-btn">
        <%= link_to 'See all posts', user_posts_path(@user), style: 'color: black; text-decoration: none;' %>
    </button>
</section>